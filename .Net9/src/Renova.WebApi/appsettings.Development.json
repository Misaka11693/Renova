{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // 跨域配置
  "AllowCors": [
    "*"
    //"https: //localhost:1032"
  ],

  // 本地化配置
  "Localization": {
    "ProviderType": "json", //resx、json
    "JsonResourcesType": "TypeBased", //TypeBased、CultureBased 区别：TypeBased按类型组织资源文件，CultureBased按文化组织资源文件
    "DefaultCulture": "zh-CN", // 默认语言
    "SupportedCultures": [ "zh-CN", "en-US", "ja-JP" ], // 支持的语言
    "ResourceFileName": "lang", // 资源文件前缀名称
    "ResourcesPath": "Resources", // 资源文件所在目录
    "ResourceAssemblyName": "Renova.WebApi" // 资源文件所在程序集名称
  },

  //RabbitMQ 配置
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },

  //事件总线配置
  "EventBus": {
    "StorageType": "Memory" // or RabbitMQ
  },

  // 缓存配置
  "CacheOptions": {
    "CacheType": "Redis", //Memory or Redis
    "Redis": {
      "Server": "localhost:6379",
      "Db": 3,
      "JobDb": 2,
      "Password": "",
      "UserName": "",
      "Timeout": 3000,
      "Prefix": ""
    }
  },

  //JWT令牌配置(SecurityKey不能一样,否则使用访问令牌可以触发刷新令牌的接口)
  "JwtTokenOptions": {
    //访问令牌
    "AccessToken": {
      "Issuer": "Renova.Admin",
      "Audience": "Renova.Admin",
      "SecurityKey": "qqxwcevrbtnymu312412ihe9rfwhe78rh23djoi32hrui3ryf9e8wfh34iuj54y0934uti4h97fgw7hf97wyh8yy69522",
      "ExpiresMinutes": 30 //30分钟有效
    },
    //刷新令牌
    "RefreshToken": {
      "Issuer": "Renova.Admin",
      "Audience": "Renova.Admin",
      "SecurityKey": "67ij4o6jo4i5j6io45j6i4j74p5k6i54ojoi5t9g8ergoj34ofgkrtbmreog894jbioemgropihj48rj4io5juopjgior",
      "ExpiresMinutes": 10080 //7天有效
    }
  },

  //文件存储配置
  "FileStorage": {
    "Provider": "Local", // 可选：Local,Ftp,Sftp,Oss
    "Local": {
      "RootPath": "/uploads" //本地存储根目录，wwwroot/uploads..
    },
    "Ftp": {
      "Host": "ftp.mycompany.com",
      "Port": 21,
      "Username": "ftpuser",
      "Password": "ftppassword",
      "StoragePath": "/uploads",
      "PublicUrl": "https://files.mycompany.com/uploads"
    },
    "Sftp": {
      "Host": "sftp.example.com",
      "Port": 22,
      "Username": "sftpuser",
      "Password": "sftpuserpassword",
      "StoragePath": "/uploads",
      "PublicUrl": "https://files.mycompany.com/uploads"
    },
    "Oss": {
      "Provider": "Minio", //支持：Minio/Aliyun/QCloud/Qiniu/HuaweiCloud
      "Region": "ap-shanghai", //地域
      "Endpoint": "https://oss.example.com", //腾讯云中表示AppId(腾讯云没有Endpoint)
      "AccessKeyId": "AKIAIOSFODNN7EXAMPLE",
      "AccessKeySecret": "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY",
      "BucketName": "filedata",
      "PublicUrl": "https://cdn.example.com/filedata/",
      "IsEnableHttps": false, //是否启用HTTPS访问
      "IsEnableCache": true //是否启用缓存，推荐开启(启用后将缓存签名URL，以减少请求次数)
    }
  }
}
