{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  //事件总线配置
  "EventBus": {
    "StorageType": "Memory" // or RabbitMQ
  },

  //RabbitMQ 配置
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },

  //文件存储配置
  "FileStorage": {
    "Provider": "Local", // 可选：Local,Ftp,Sftp,Oss
    "Local": {
      "RootPath": "/uploads" //本地存储根目录，wwwroot/uploads..
    },
    "Ftp": {
      "Host": "ftp.mycompany.com",
      "Port": 21,
      "Username": "ftpuser",
      "Password": "ftppassword",
      "StoragePath": "/uploads",
      "PublicUrl": "https://files.mycompany.com/uploads"
    },
    "Sftp": {
      "Host": "sftp.example.com",
      "Port": 22,
      "Username": "sftpuser",
      "Password": "sftpuserpassword",
      "StoragePath": "/uploads",
      "PublicUrl": "https://files.mycompany.com/uploads"
    },
    "Oss": {
      "Provider": "Minio", //支持：Minio/Aliyun/QCloud/Qiniu/HuaweiCloud
      "Region": "ap-shanghai", //地域
      "Endpoint": "https://oss.example.com", //腾讯云中表示AppId(腾讯云没有Endpoint)
      "AccessKeyId": "AKIAIOSFODNN7EXAMPLE",
      "AccessKeySecret": "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY",
      "BucketName": "filedata",
      "PublicUrl": "https://cdn.example.com/filedata/",
      "IsEnableHttps": false, //是否启用HTTPS访问
      "IsEnableCache": true //是否启用缓存，推荐开启(启用后将缓存签名URL，以减少请求次数)
    }
  }
}
